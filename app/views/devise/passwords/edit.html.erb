<h2>Change your password</h2>

<%= simple_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put }, class: "form-horizontal") do |f| %>
  <%= f.error_notification %>
  <%= f.hidden_field :reset_password_token %>

  <%= f.input :password, label: "New Password", autocomplete: "off" %>
  <%= f.input :password_confirmation, label: "New Password Confirmation", autocomplete: "off" %>

  <div class="form-actions">
    <%= f.submit "Change my password", class: "btn" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
